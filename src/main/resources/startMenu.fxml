<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import agh.darwinworld.control.IntField?>
<GridPane alignment="CENTER" hgap="10" vgap="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="agh.darwinworld.presenter.StartMenuPresenter">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Properties" GridPane.columnSpan="2" GridPane.halignment="CENTER" />

    <Label text="Map height:" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="heightIntField" text="100" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Map width:" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="widthIntField" text="100" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Plants spawning at the start:" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="startingPlantAmountIntField" text="15" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Plants growing in each day:" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="plantGrowingAmountIntField" text="10" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Plant energy profit:" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="plantEnergyAmountIntField" text="15" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Animals spawning at the start:" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="startingAnimalAmountIntField" text="10" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Animal start energy:" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="startingEnergyAmountIntField" text="40" GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Minimum breeding energy:" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="minimumBreedingEnergyIntField" text="15" GridPane.rowIndex="8" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Breeding energy cost:" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="breedingEnergyCostIntField" text="10" GridPane.rowIndex="9" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Minimum mutation amount:" GridPane.rowIndex="10" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="minimumMutationAmountIntField" text="4" GridPane.rowIndex="10" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Maximum mutation amount:" GridPane.rowIndex="11" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="maximumMutationAmountIntField" text="10" GridPane.rowIndex="11" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Animal genome length:" GridPane.rowIndex="12" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="animalGenomeLengthIntField" text="10" GridPane.rowIndex="12" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Fire frequency:" GridPane.rowIndex="13" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="fireFrequencyIntField" text="10" GridPane.rowIndex="13" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Fire length:" GridPane.rowIndex="14" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="fireLengthIntField" text="10" GridPane.rowIndex="14" GridPane.columnIndex="1" GridPane.halignment="LEFT" />

    <Label text="Simulation seed:" GridPane.rowIndex="15" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
    <IntField fx:id="seedIntField" text="1" GridPane.rowIndex="15" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
    <Button onAction="#seedGenerate" text="ðŸŽ²" GridPane.rowIndex="15" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />

    <Button onAction="#onSimulationStart" text="Start new simulation" GridPane.rowIndex="16" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
</GridPane>
